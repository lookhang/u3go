<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:attrstest="http://schemas.android.com/apk/res/com.dome.viewer"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<android.support.v4.view.ViewPager
		android:paddingBottom="55dip" android:layout_width="wrap_content"
		android:layout_gravity="center" android:id="@+id/vPager"
		android:layout_height="wrap_content" />
	<RadioGroup android:gravity="center_horizontal"
		android:layout_gravity="bottom" android:layout_alignParentBottom="true" android:orientation="horizontal"
		android:id="@+id/main_radio" android:background="@drawable/maintab_toolbar_bg"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<com.u3go.demo.widget.MyRadioButton
			android:id="@+id/radio_button0" android:tag="radio_button0"
			android:layout_marginTop="2.0dip" android:text="首页"
			android:drawableTop="@drawable/icon_1" style="@style/main_tab_bottom" />
		<com.u3go.demo.widget.MyRadioButton
			android:id="@+id/radio_button1" android:tag="radio_button1"
			android:layout_marginTop="2.0dip" android:text="个人中心"
			android:drawableTop="@drawable/icon_2" style="@style/main_tab_bottom" />
		<com.u3go.demo.widget.MyRadioButton
			android:id="@+id/radio_button2" android:tag="radio_button2"
			android:layout_marginTop="2.0dip" android:text="客户服务"
			android:drawableTop="@drawable/icon_3" style="@style/main_tab_bottom" />
		<com.u3go.demo.widget.MyRadioButton
			android:id="@+id/radio_button3" android:tag="radio_button3"
			android:layout_marginTop="2.0dip" android:text="银行卡"
			android:drawableTop="@drawable/card" style="@style/main_tab_bottom" />
	</RadioGroup>
</RelativeLayout>